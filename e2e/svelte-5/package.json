{
  "name": "@svelte-jester-e2e/svelte-5",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "pnpm install && NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --no-warnings\" jest --coverage",
    "test:watch": "pnpm run test --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "svelte": "^5.0.0-next.139",
    "svelte-jester": "workspace:*"
  },
  "dependenciesMeta": {
    "svelte-jester": {
      "injected": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.svelte(?:\\.js)?$": [
        "svelte-jester"
      ]
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "extensionsToTreatAsEsm": [
      ".svelte"
    ],
    "testEnvironment": "jsdom"
  }
}
