{
  "name": "svelte-jester",
  "version": "2.3.2",
  "description": "A Jest transformer for Svelte - compile your components before importing them into tests",
  "main": "dist/transformer.cjs",
  "module": "dist/transformer.mjs",
  "exports": {
    ".": {
      "import": "./dist/transformer.mjs",
      "require": "./dist/transformer.cjs"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "license": "MIT",
  "author": "Rahim Alwer <rahim_alwer@hotmail.com>",
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/svelteness/svelte-jester#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/svelteness/svelte-jester"
  },
  "bugs": {
    "url": "https://github.com/svelteness/svelte-jester/issues"
  },
  "keywords": [
    "svelte-jester",
    "jest",
    "svelte",
    "sveltekit",
    "compile",
    "transformer",
    "preprocess",
    "test"
  ],
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.cjs",
    "toc": "doctoc README.md",
    "lint": "standard --fix --env jest",
    "test": "npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest src/__tests__",
    "e2e": "npm run e2e:svelte && npm run e2e:sveltekit",
    "e2e:svelte": "cd e2e/svelte && npm install && npx jest src",
    "e2e:sveltekit": "cd e2e/sveltekit && npm install && npm run test",
    "test:nocache": "npm install && jest --clearCache && npm run test -- --no-cache",
    "test:watch": "npm test -- --watch",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "setup": "npm install && npm run validate",
    "validate": "npm run lint && npm run test:nocache",
    "release": "npm run validate && standard-version"
  },
  "peerDependencies": {
    "jest": ">= 27",
    "svelte": ">= 3 < 4"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@sveltejs/adapter-static": "^2.0.2",
    "@types/jest": "^29.5.3",
    "cross-env": "^7.0.3",
    "doctoc": "^2.2.1",
    "jest": "^29.6.1",
    "jest-circus": "^29.6.1",
    "sass": "^1.64.0",
    "rollup": "^3.26.3",
    "rollup-plugin-copy-assets": "^2.0.3",
    "standard": "^17.1.0",
    "standard-version": "^9.5.0",
    "svelte": "^3.59.2",
    "svelte-preprocess": "^5.0.4",
    "typescript": "^5.1.6"
  }
}
